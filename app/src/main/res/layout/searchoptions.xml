<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
  >


    <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Search"
            android:id="@+id/searchbutton"
        android:layout_below="@+id/radiogroup"
        android:layout_centerHorizontal="true" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/radiogroup">

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thai Food"
        android:id="@+id/thai"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="American Food"
        android:id="@+id/american"
        android:checked="false"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indian Food"
        android:id="@+id/indian"
        android:checked="false"
        android:layout_alignTop="@+id/radioButton3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese Food"
            android:id="@+id/chinese"
            android:checked="false"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/radioButton4" />
    </RadioGroup>


</RelativeLayout>