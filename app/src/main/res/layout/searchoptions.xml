<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
  >


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese Food"
            android:id="@+id/chinese"
            android:checked="false"
           />

        <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thai Food"
        android:id="@+id/thai"
        android:checked="false"

            android:layout_below="@+id/chinese"
            android:layout_alignParentStart="true" />

        <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indian Food"
        android:id="@+id/indian"
        android:checked="false"
            android:layout_above="@+id/thai"
            android:layout_toEndOf="@+id/searchbutton" />

        <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="American Food"
        android:id="@+id/american"
        android:checked="false"
            android:layout_alignTop="@+id/thai"
            android:layout_alignEnd="@+id/indian" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Search"
            android:id="@+id/searchbutton"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />



</RelativeLayout>